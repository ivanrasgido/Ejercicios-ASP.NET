@model Vidly.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="font-size:5em">Customers</h1>

    <table id="customers" class="table table-responsive-xl table­‐bordered table­‐hover container-fluid col-12 m-3 " >
        <thead>
            <tr>
                <th>Customers</th>
                <th>Membership Type</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
                
        </tbody>
    </table>


@section scripts
{
    <script>
        $(document).ready(function () {

            var table = $("#customers").DataTable({

                ajax: {
                    url: "/Api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, customer) {
                            return "<a href='/Customers/Edit/" + customer.id + "'>" + customer.name + "</a>";
                        }
                    },
                    {
                        data: "membershipType.name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-customer-id=" + data + ">Delete</button>";
                        }
                    },
                ]

            });

            $("#customers").on("click", ".js-delete", function (e) {

                var button = $(this);


                if (confirm("Are you sure you want to delete this customer?")) {


                    $.ajax({

                        url: "/api/customers/" + button.attr("data-customer-id"),
                        method: "DELETE",
                        success: function () {
                            table.row(button.parents("tr")).remove().draw();
                        }
                    });


                }

           

                

            });
        });
    </script>

}
    


    

